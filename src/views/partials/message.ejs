<div class="container">

    <% if(error_msg.length > 0){%>

        <div class="alert-danger w-25 mx-auto my-5 alert fade show alert-dismissible" role="alert">
            <%= error_msg %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
<span aria-hidden="true">&times;</span>
</button>

        </div>
        <% } %>

            <% if(success.length > 0){%>
                <div class="alert-success w-25 mx-auto my-5 alert fade show alert-dismissible" role="alert">
                    <%= success %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
<span aria-hidden="true">&times;</span>
</button>
                </div>
                <% } %>

</div>