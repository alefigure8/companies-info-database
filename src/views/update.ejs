<%- layout('layout/main.ejs') %>
    <div class="container">
        <div class="row my-4">
            <div class="col-md-5 mx-auto">
                <div class="card">
                    <div class="card-header text-center">
                        EDITAR EMPRESA
                    </div>
                    <div class="card-body">
                        <form action="/update/<%= empresa._id %>?_method=PUT" method="POST">
                            <div class="form-group">
                                <input type="text" name="name" placeholder="Empresa" class="form-control" value="<%= empresa.name %>" autofocus>
                            </div>
                            <div class="form-group">
                                <input type="text" name="cuit" placeholder="CUIT" class="form-control" value="<%= empresa.cuit %>">
                            </div>
                            <div class="form-group">
                                <input type="text" name="url" placeholder="URL" class="form-control" value="<%= empresa.url %>">
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="construar" name="construar" <% if(empresa.construar==='on' ) {%>
                                <%= 'checked'  %>
                                    <% } %>

                                        >
                                        <label class="form-check-label" for="construar">
                              ¿Está en ConstruAr?
                            </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="construar_note" name="construar_note" id="construar" name="construar" <% if(empresa.construar_note==='on' ) {%>
                                <%= 'checked'  %>
                                    <% } %>

                                        >
                                        <label class="form-check-label" for="construar_note">
                              ¿Tiene notas en ConstruAr?
                            </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="op_suscript" name="op_suscript" <% if(empresa.op_suscript==='on' ) {%>
                                <%= 'checked'  %>
                                    <% } %>

                                        >
                                        <label class="form-check-label" for="op_suscript">
                              ¿Es suscriptor de ObraPública?
                            </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="op_exsuscript" name="op_exsuscript" <% if(empresa.op_exsuscript==='on' ) {%>
                                <%= 'checked'  %>
                                    <% } %>

                                        >
                                        <label class="form-check-label" for="op_exsuscript">
                              ¿Fue suscriptor de ObraPública?
                            </label>
                            </div>
                            <hr>
                            <h5 class="card-title mt-3"> Acciones </h5>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="send_mail" name="send_mail" <% if(empresa.send_mail==='on' ) {%>
                                <%= 'checked'  %>
                                    <% } %>

                                        >
                                        <label class="form-check-label" for="send_mail">
                              Enviar Mail
                            </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="call" name="call" <% if(empresa.call==='on' ) {%>
                                <%= 'checked'  %>
                                    <% } %>

                                        >
                                        <label class="form-check-label" for="call">
                              Llamar
                            </label>
                            </div>
                            <div class="form-group mt-3">
                                <button type="submit" class="btn btn-primary btn-block">
                                Editar
                            </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>